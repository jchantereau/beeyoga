<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path do %>
    <%= image_tag "logo-white.png", id: "logo-nav" %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs">

    <!-- Text link -->
    <%= link_to "Accueil", root_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Text link -->
    <%= link_to "Séances", sessions_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Text link -->
    <%= link_to "FAQ", faq_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Text link -->
    <%= link_to "Contact", root_path, class: "navbar-wagon-item navbar-wagon-link" %>

    <!-- Button (call-to-action) -->
    <%= link_to "Voir les sessions", sessions_path, id:"btn-nav", class: "action-btn-nav hidden-xs" %>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-sm hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Accueil", root_path %></li>
        <li><%= link_to "Séances", sessions_path %></li>
        <li><%= link_to "FAQ", root_path %></li>
        <li><%= link_to "Contact", root_path %></li>
      </ul>
    </div>
  </div>
</div>
