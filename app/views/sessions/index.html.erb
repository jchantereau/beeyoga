<!-- navbar -->

<div class="navbar">
 <%= image_tag "logo-white.png", id: "logo-nav" %>
 <ul class="list-inline">
   <li>Accueil</li>
   <li>Séances</li>
   <li>FAQ</li>
   <li>Contact</li>
 </ul>
</div>

<!-- Sessions -->

<div class="sessions">
  <div class="banner-sessions">
    <h3 class="text-center">Participer à l'aventure Yoga des Abeilles®</h3>
  </div>
  <div class="session-card">
    <p class="text-session">Initiation au Yoga des Abeilles®, à Cauterêts</p>
    <div class="date">
      <p>du 06/07/16 au 08/07/16</p>
    </div>
    <%= link_to "Postuler", sessions_path, class: "btn btn-primary " %>
    <p class="price">Prix : 990€ TTC</p>
   </div>
</div>




<h1>Liste des sessions</h1>
  <ul>
    <% @sessions.each do |session| %>
      <li>
        <%= session.course.title%>, du <%= session.start_date%> au <%= session.end_date%> à <%= session.location%>
        <%= link_to "réserver", session_path(session) %>
      </li>
    <% end %>
  </ul>
