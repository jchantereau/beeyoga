<!-- Sessions -->

<div class="sessions">
  <div class="banner-sessions">
    <h3 class="text-center">Participer à l'aventure Yoga des Abeilles®</h3>
  </div>
  <% @sessions.each do |session| %>
    <div class="row session-card">
      <div class="col-xs-12 col-sm-4 col-lg-6">
        <p class="text-session"><%= session.course.title%>, à <%= session.location%></p>
      </div>
      <div class="col-xs-12 col-sm-5 col-lg-3">
        <div class="date">
          <p><%= session.start_date%> au <%= session.end_date%></p>
        </div>
      </div>
      <div class="col-xs-6 col-sm-2 col-lg-1">
        <%= link_to "Postuler", session_path(session), class: "btn btn-primary " %>
      </div>
      <div class="col-xs-6 col-sm-3 col-lg-2">
        <p class="price">Prix : 990€ TTC</p>
      </div>
    </div>
  <% end %>
</div>




